<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".category">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/image"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="600px"
            android:layout_height="150px"
            android:background="@color/image"

            android:textSize="50px"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:text="Welcome," />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="225px"
            android:layout_height="300px"
            android:layout_gravity="center"
            android:layout_margin="50px"

            android:orientation="vertical">


            <ImageButton
                android:id="@+id/imageButton14"
                android:layout_width="225px"
                android:layout_height="200px"
                android:layout_weight="1"
                android:background="@drawable/road" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Roads and Transport" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="225px"
            android:layout_height="300px"
            android:layout_margin="50px"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton15"
                android:layout_width="225px"
                android:layout_height="200px"
                android:background="@drawable/school" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Schools" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="225px"
            android:layout_height="300px"
            android:layout_margin="50px"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/imageButton16"
                android:layout_width="225px"
                android:layout_height="200px"
                android:layout_weight="1"
                android:background="@drawable/hospital" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Hospital" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="225px"
            android:layout_height="300px"
            android:layout_margin="50px"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton18"
                android:layout_width="225px"
                android:layout_height="200px"
                android:background="@drawable/water"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="225px"
                android:layout_height="200px"
                android:text="Water" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="225px"
            android:layout_height="300px"
            android:layout_margin="50px"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton19"
                android:layout_width="225px"
                android:layout_height="200px"
                android:background="@drawable/sani" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="225px"
                android:layout_height="200px"
                android:text="Sanitary" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="225px"
            android:layout_height="300px"
            android:layout_margin="50px"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton20"
                android:layout_width="225px"
                android:layout_height="200px"
                android:background="@drawable/tele"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="225px"
                android:layout_height="200px"
                android:text="Tele-communication" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="225px"
            android:layout_height="300px"
            android:layout_margin="50px"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton21"
                android:layout_width="225px"
                android:layout_height="300px"
                android:layout_weight="1"
                android:background="@drawable/current" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="225px"
                android:layout_height="200px"
                android:layout_weight="1"
                android:text="power" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="225px"
            android:layout_height="300px"
            android:layout_margin="50px"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButton22"
                android:layout_width="225px"
                android:layout_height="200px"
                android:background="@drawable/others" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="225px"
                android:layout_height="200px"
                android:text="Others" />
        </LinearLayout>


    </LinearLayout>


    </LinearLayout>




